{
  "version": 1,
  "hooks": {
    "sessionStart": [
      {
        "type": "command",
        "bash": "bash \"${COPILOT_PLUGIN_DIR:-.}/.github/hooks/scripts/session-start.sh\"",
        "cwd": ".",
        "timeoutSec": 30
      }
    ],
    "preToolUse": [
      {
        "type": "command",
        "bash": "bash \"${COPILOT_PLUGIN_DIR:-.}/.github/hooks/scripts/pre-command.sh\"",
        "cwd": ".",
        "timeoutSec": 10
      }
    ]
  }
}
